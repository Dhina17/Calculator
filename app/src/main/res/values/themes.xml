<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lineage_teal</item>
        <item name="colorPrimaryVariant">@color/lineage_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:textStyle">bold</item>
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>

    <!-- NumberPad theme -->
    <style name="Theme.NumberPad" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/number_button_text_color_light</item>
    </style>
</resources>